<!DOCTYPE html>
<html>
  <head>
    <title>RailsAssessment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav>
      <ul>
        <li><%= link_to "logout", destroy_user_session_path, method: "DELETE" if user_signed_in? %>
        <%= link_to "login", user_session_path, method: "GET" unless user_signed_in? %></li>
        <li><%= link_to "My Profile", profile_path(current_user), method: "GET" if user_signed_in? %></li>
        <li><%= link_to "Sign Up", new_user_registration_path, method: "GET" unless user_signed_in? %></li>

      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
