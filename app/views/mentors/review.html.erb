<h1>Add A Review</h1>

<%= form_with(model: @review, local: true) do |form| %>
    <div class="field">
        <%= form.label :rating %>
        1<%= form.range_field :rating, in: 1..5, step: 0.5 %>5
    </div>

    <div class="field">
        <%= form.label :body %>
        <br/>
        <%= form.text_area :body %>
    </div>

    <div class="actions">
        <%= form.submit "Submit Review" %>
    </div>
<% end %>