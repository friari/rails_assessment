<h1>Add A Review</h1>

<%= form_with(model: @review, local: true) do |form| %>
    <div class="field">
        <%= form.label :rating %>
        <%= form.number_field :rating %>
    </div>

    <div class="field">
        <%= form.label :body %>
        <%= form.text_field :body %>
    </div>

    <div class="actions">
        <%= form.submit "Submit Review" %>
    </div>
<% end %>