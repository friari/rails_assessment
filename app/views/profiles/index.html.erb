<h1>My Profile</h1>

<h3>User Details</h3>
<h5>Name: <%= current_user.full_name %></h5> 
<h5>Email: <%= current_user.email %></h5> 
<h5>Contact Number: <%= current_user.contact_number.to_s.rjust(10, "0") %></h5>
<h5>Country: <%= current_user.country %></h5>
<h5>State: <%= current_user.state %></h5>
<h5>City: <%= current_user.city %></h5> 



<%= link_to 'update user info', edit_user_registration_path %>

<h3>Mentor Details</h3>
<% if !(@mentor_details) %>
    <p>You are not a mentor</p>
    <%= link_to 'become a mentor', new_mentor_path%> 
<% else %>
<p>Rate: $<%= @mentor_details.conversion %>/hr</p>
<p>About Me: <%= @mentor_details.about_me %></p>
<%= link_to 'update mentor info', edit_mentor_path(@mentor_details) %>
<%= link_to 'Destroy', @mentor_details, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>




